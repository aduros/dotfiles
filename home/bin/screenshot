#!/bin/bash
#
# Takes a screenshot and shares it

umask 077

# https://code.google.com/p/xmonad/issues/detail?id=476
sleep 0.1

file=~/.screenshot.png

# Install prerequisites
# if [ ! `which scrot` ]; then gksudo apt-get install scrot; fi

scrot -s "$file"
if [ ! -f "$file" ]; then
    exit;
fi

~/bin/share "$file"
rm "$file"
